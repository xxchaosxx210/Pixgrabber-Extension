{
    "name": "Pix Thumbnail Grabber",
    "version": "0.1",
    "description": "Pick and choose groups of Thumbnails to download, using the PixGrabber Program. Requires PixGrabber - https://github.com/xxchaosxx210/wxPixGrabber.git",
    "manifest_version": 2,
    "icons":{
        "16": "images/pix16.png",
        "32": "images/pix32.png",
        "48": "images/pix48.png",
        "128": "images/pix128.png"
    },
    "author": "Paul Millar",
    "permissions": [
        "https://*/", 
        "http://*/", 
        "storage",
        "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/pix16.png",
            "32": "images/pix32.png",
            "48": "images/pix48.png",
            "128": "images/pix128.png"
        },
        "default_title": "PixGrabber Helper"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["content.css"],
        "js": ["content.js"],
        "match_about_blank": false,
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "frame.html",
        "frame.js"
    ]
}